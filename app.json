{
  "expo": {
    "name": "UnityLink",
    "slug": "UnityLink",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "unitylink",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "UnityLink is a mobile app that bridges religious divides through shared stories. Users anonymously share real-life moments of kindness, cultural beauty, and common values â€” showing how much more connects us than divides us.",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.unitylink.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.unitylink.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-image-picker"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
